<div class="github-fork">
  <i class='octicon octicon-repo-forked activity-item__icon'></i>
  <div class="activity-time">{{widget "timeago" time=sent compact=true position="left"}}</div>
  <div class="gtrActivityItemText">
    <a href="https://github.com/{{payload.sender.login}}" target="_blank"><span class='mention' data-link-type="mention" data-screen-name="{{payload.sender.login}}">{{payload.sender.login}}</span></a> forked<br>
    <span class="activity-detail"> <a href="{{payload.forkee.html_url}}" target="_blank">{{payload.forkee.full_name}}</a></span>
  </div>
</div>
