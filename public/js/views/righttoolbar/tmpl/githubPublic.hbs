<div class="github-public">
  <i class='octicon octicon-repo'></i>
  <div class="activity-time">{{widget "timeago" time=sent compact=true position="left"}}</div>

  <span class="gtrActivityItemText"><span class='mention' data-link-type="mention" data-screen-name="{{payload.sender.login}}">{{payload.sender.login}}</span> made <a href="{{payload.repository.html_url}}" target="_blank">{{payload.repository.full_name}}</a> public</span>

  <div style="clear: both;"></div>
</div>
