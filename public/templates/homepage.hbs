<!doctype html>
<html class="no-js {{#if hasCachedFonts}}fonts-loaded{{/if}}" lang="{{ lang }}">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <title>{{{ __ "Gitter &mdash; Where developers come to talk." }}}</title>

  <meta name="description" content="Where developers come to talk.">

  {{#each socialMetadata}}
  <meta property="{{@key}}" content="{{this}}" />
  {{/each}}

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />

  <link rel="stylesheet" href='{{cdn cssFileName }}'>

  <link id="favicon" rel="shortcut icon" href="{{ cdn 'images/favicon-normal.ico' }}">
  {{> fonts}}
</head>

<body {{#if wordy}}class="wordy" {{/if}}>
  <div class="homepage">

    <header id="intro-panel">
      <nav class="site-nav">
        <div class="wrap">

          <a href="/" class="logo">
            {{> logo_man}}
            <img src="{{ cdn 'images/home/logo_nomargin@2x.png' }}" alt="Gitter" class="logo-image menu-animation">
          </a>

          <div class="top-navigation menu-animation">
            <a href="#integrations-panel">{{ __ "Integrations" }}</a>
            <a href="#apps-panel">{{ __ "Apps" }}</a>
            <a href="https://gitlab.com/gitterHQ/webapp" target="_blank">{{ __ "Open Source" }}</a>
          </div>

          <a class="btn login" href="/login?action=login&source=intro-login">
            <b><span class='desktopOnly'>{{ __ "Sign In to Start Talking"}}</span><span
                class='exceptDesktop'>{{ __ "login"}}</span></b>
          </a>
        </div>
      </nav>
      <div class="wrap">
        <div class="map">
          <img class="bg" src="{{cdn 'images/home/map.png'}}" alt="There should be a map here">
        </div>

        <div class="intro-title-block">
          <h1>{{ __ "Where communities thrive"}}</h1>

          <a class="gitter-element-news-link" href="https://blog.gitter.im/2020/09/30/gitter-element-acquisition/" target="_blank">
